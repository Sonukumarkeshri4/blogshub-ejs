<h1> <b> Compose</b></h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="" required>
</div>

<div class="form-group">
    <label for="postBody">Post</label>
      <textarea class="form-control" name="postBody" rows="5" required="true"></textarea>

  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

